{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@models/*": ["src/models/*"],
      "@helpers": ["src/helpers"],
      "@controllers/*": ["src/controllers/*"],
      "@controllers": ["src/controllers"],
      "@routes/*": ["src/routes/api/*"],
      "@routes": ["src/routes"],
      "@resolvers/*": ["src/resolvers/*"],
      "@resolvers": ["src/resolvers"]
    }
  }
}
